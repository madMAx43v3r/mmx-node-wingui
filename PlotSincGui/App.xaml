<common:WpfApplication
    xmlns:common="clr-namespace:Mmx.Gui.Win.Wpf.Common;assembly=Mmx.Gui.Win.Wpf.Common"
    x:Class="PlotSincGui.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PlotSincGui"
    
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    
    StartupUri="MainWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources>
                    <ui:ThemeResources.ThemeDictionaries>
                        <ResourceDictionary x:Key="Light">
                            <sys:Double x:Key="ContentDialogMaxWidth">1700</sys:Double>
                        </ResourceDictionary>

                        <ResourceDictionary x:Key="Dark">
                            <sys:Double x:Key="ContentDialogMaxWidth">1700</sys:Double>
                        </ResourceDictionary>

                        <ResourceDictionary x:Key="HighContrast">
                            <sys:Double x:Key="ContentDialogMaxWidth">1700</sys:Double>
                        </ResourceDictionary>
                    </ui:ThemeResources.ThemeDictionaries>
                </ui:ThemeResources>
                <ui:XamlControlsResources />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
        </ResourceDictionary>
    </Application.Resources>
    
</common:WpfApplication>
